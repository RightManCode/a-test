<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wishland.www.wanhaohuimaterialdesign.ui.activity.ReEditPwActivity">

    <com.zhy.autolayout.AutoLinearLayout
        android:paddingTop="30px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/btn_login_pw"
            android:layout_width="match_parent"
            android:layout_height="@dimen/normal_h"
            android:layout_marginTop="5px"
            android:background="@color/colorPrimary"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="70px"
                android:layout_height="70px"
                android:layout_marginLeft="40px"
                android:src="@drawable/usercenter0" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="登录密码"
                android:textColor="@color/text_primary"
                android:textSize="40px" />

            <ImageView
                android:layout_width="60px"
                android:layout_height="60px"
                android:layout_marginRight="60px"
                android:src="@drawable/ic_action_forward" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_trans_pw"
            android:layout_width="match_parent"
            android:layout_height="@dimen/normal_h"
            android:layout_marginTop="5px"
            android:background="@color/colorPrimary"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="70px"
                android:layout_height="70px"
                android:layout_marginLeft="40px"
                android:src="@drawable/usercenter1" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="交易密码"
                android:textColor="@color/text_primary"
                android:textSize="40px" />

            <ImageView
                android:layout_width="60px"
                android:layout_height="60px"
                android:layout_marginRight="60px"
                android:src="@drawable/ic_action_forward" />
        </LinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>
</ScrollView>
