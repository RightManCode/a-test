<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wishland.www.wanhaohuimaterialdesign.ui.activity.ReEditPwActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="400px"
        android:paddingLeft="60px"
        android:paddingRight="60px"
        android:paddingTop="400px">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/normal_h"
            android:layout_marginTop="50px"
            android:background="@drawable/bg_gray_coner">

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="60px"
                android:layout_height="60px"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20px"
                android:src="@drawable/login1" />

            <EditText
                android:id="@+id/et_old_pw"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:hint="原密码"
                android:inputType="textPassword"
                android:maxLines="1"
                android:padding="20px"
                android:textSize="48px" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/normal_h"
            android:layout_marginTop="50px"
            android:background="@drawable/bg_gray_coner">

            <ImageView
                android:layout_width="60px"
                android:layout_height="60px"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20px"
                android:src="@drawable/login1" />

            <EditText
                android:id="@+id/et_pw"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:hint="密码"
                android:inputType="textPassword"
                android:maxLines="1"
                android:padding="20px"
                android:textSize="48px" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/normal_h"
            android:layout_marginTop="50px"
            android:background="@drawable/bg_gray_coner">

            <ImageView
                android:layout_width="60px"
                android:layout_height="60px"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20px"
                android:src="@drawable/login1" />

            <EditText
                android:id="@+id/et_re_pw"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:hint="确认密码"
                android:inputType="textPassword"
                android:maxLines="1"
                android:padding="20px"
                android:textSize="48px" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_submit_register"
            android:layout_width="match_parent"
            android:layout_height="@dimen/normal_h"
            android:layout_marginTop="50px"
            android:textColor="@color/white"
            android:background="@drawable/bg_accent"
            android:text="修  改" />
    </LinearLayout>
</ScrollView>
