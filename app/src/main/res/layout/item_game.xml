<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/coner"
    app:cardElevation="@dimen/elevation2"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_game"
            android:layout_width="450px"
            android:layout_height="390px"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_ganme_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxLines="2"
                android:paddingLeft="50px"
                android:paddingRight="50px"
                android:textSize="50px"
                tools:text="神奇四侠神奇四侠神奇四侠" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/normal_h"
                android:layout_marginLeft="60px"
                android:layout_marginRight="60px"
                android:layout_marginTop="50px"
                android:background="@drawable/bg_accent"
                android:elevation="@dimen/elevation4"
                android:text="立 即 游 戏"
                android:gravity="center"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>