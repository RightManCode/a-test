    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wishland.www.wanhaohuimaterialdesign.ui.activity.RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="400px"
        android:paddingLeft="60px"
        android:paddingRight="60px"
        android:paddingTop="400px">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/normal_h"
            android:background="@drawable/bg_gray_coner">

