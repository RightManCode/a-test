<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/coner"
    app:cardElevation="@dimen/elevation2"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="35px">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_record1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/text_accent"
                android:textSize="32px"
                tools:text="好的沙发还是地方发斯蒂芬累计达康师傅" />

            <TextView
                android:id="@+id/tv_record5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:textColor="@color/text_primary"
                android:textSize="32px"
                tools:text="状态：成功" />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_record4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:textColor="@color/colorAccent"
            android:textSize="90px"
            tools:text="金额：10.00" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_record6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:textColor="@color/colorAccent"
                    android:textSize="45px"
                    tools:text="手续费：0.100" />

                <TextView
                    android:id="@+id/tv_record7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="20px"
                    android:textColor="@color/text_primary"
                    android:textSize="32px"
                    tools:text="较频繁收到" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_record2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_accent"
                    android:textSize="32px"
                    tools:text="好的沙发还是地方发斯蒂芬累计达康师傅" />

                <TextView
                    android:id="@+id/tv_record3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_accent"
                    android:textSize="32px"
                    tools:text="好的沙发还是地方发斯蒂芬累计达康师傅" />
            </LinearLayout>
        </LinearLayout>
    </com.zhy.autolayout.AutoLinearLayout><!--<com.zhy.autolayout.AutoLinearLayout--><!--android:layout_width="match_parent"--><!--android:layout_height="wrap_content"--><!--android:orientation="vertical"--><!--android:padding="32px">-->

