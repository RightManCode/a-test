<?xml version="1.0" encoding="utf-8"?>

<com.zhy.autolayout.AutoFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/srl"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="50px">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="right|bottom"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <FrameLayout
                            android:layout_width="100dp"
                            android:layout_height="100dp">

                            <View
                                android:id="@+id/fl_halo"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:background="@drawable/bg_head" />

                            <com.beardedhen.androidbootstrap.BootstrapCircleThumbnail
                                android:id="@+id/iv_head"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_gravity="center"
                                android:src="@drawable/head"
                                app:hasBorder="false" />

                        </FrameLayout>

                        <Button
                            android:id="@+id/btn_sign"
                            android:layout_width="wrap_content"
                            android:layout_height="60px"
                            android:layout_gravity="center_horizontal|bottom"
                            android:layout_marginTop="50px"
                            android:background="@drawable/bg_accent"
                            android:text="账户绑定"
                            android:textColor="@color/white"
                            android:textSize="30px" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="50px"
                            android:text="钱包余额:"
                            android:textColor="@color/text_primary"
                            android:textSize="50px" />

                        <TextView
                            android:id="@+id/tv_balance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="90px"
                            android:layout_marginTop="20px"
                            android:text="0.00"
                            android:textColor="@color/text_primary"
                            android:textSize="90px"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30px"
                            android:text="可提现:"
                            android:textColor="@color/text_primary"
                            android:textSize="35px" />

                        <TextView
                            android:id="@+id/tv_can_withdraw"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="90px"
                            android:layout_marginTop="10px"
                            android:text="0.00"
                            android:textColor="@color/text_primary"
                            android:textSize="60px" />


                        <Button
                            android:id="@+id/btn_recharge"
                            android:layout_width="wrap_content"
                            android:layout_height="60px"
                            android:layout_gravity="center_horizontal|bottom"
                            android:layout_marginTop="30px"
                            android:background="@drawable/bg_accent"
                            android:text="立即充值"
                            android:textColor="@color/white"
                            android:textSize="30px"
                            android:visibility="gone" />

                    </LinearLayout>


                </FrameLayout>

                <LinearLayout
                    android:id="@+id/btn_withdraw_now"
                    android:layout_width="match_parent"
                    android:layout_height="150px"
                    android:layout_marginTop="5px"
                    android:background="@color/colorPrimary"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="90px"
                        android:layout_height="90px"
                        android:layout_marginLeft="50px"
                        android:src="@drawable/usercenter0" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="立即提现"
                        android:textColor="@color/text_primary"
                        android:textSize="50px" />

                    <ImageView
                        android:layout_width="60px"
                        android:layout_height="60px"
                        android:layout_marginRight="60px"
                        android:src="@drawable/ic_action_forward" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_transaction_record"
                    android:layout_width="match_parent"
                    android:layout_height="150px"
                    android:layout_marginTop="5px"
                    android:background="@color/colorPrimary"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="90px"
                        android:layout_height="90px"
                        android:layout_marginLeft="50px"
                        android:src="@drawable/usercenter1" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="交易记录"
                        android:textColor="@color/text_primary"
                        android:textSize="50px" />

                    <ImageView
                        android:layout_width="60px"
                        android:layout_height="60px"
                        android:layout_marginRight="60px"
                        android:src="@drawable/ic_action_forward" />
                </LinearLayout>

                <LinearLayout

                    android:id="@+id/btn_betting_withdrawal"
                    android:layout_width="match_parent"
                    android:layout_height="150px"
                    android:layout_marginTop="5px"
                    android:background="@color/colorPrimary"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="90px"
                        android:layout_height="90px"
                        android:layout_marginLeft="50px"
                        android:src="@drawable/usercenter2" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="投注记录"
                        android:textColor="@color/text_primary"
                        android:textSize="50px" />

                    <ImageView
                        android:layout_width="60px"
                        android:layout_height="60px"
                        android:layout_marginRight="60px"
                        android:src="@drawable/ic_action_forward" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_game_advice"
                    android:layout_width="match_parent"
                    android:layout_height="150px"
                    android:layout_marginTop="5px"
                    android:background="@color/colorPrimary"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="90px"
                        android:layout_height="90px"
                        android:layout_marginLeft="50px"
                        android:src="@drawable/usercenter3" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="游戏推荐"
                        android:textColor="@color/text_primary"
                        android:textSize="50px" />

                    <ImageView
                        android:layout_width="60px"
                        android:layout_height="60px"
                        android:layout_marginRight="60px"
                        android:src="@drawable/ic_action_forward" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_my_level"
                    android:layout_width="match_parent"
                    android:layout_height="150px"
                    android:layout_marginTop="5px"
                    android:background="@color/colorPrimary"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="90px"
                        android:layout_height="90px"
                        android:layout_marginLeft="50px"
                        android:src="@drawable/usercenter4" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="我的等级"
                        android:textColor="@color/text_primary"
                        android:textSize="50px" />

                    <ImageView
                        android:layout_width="60px"
                        android:layout_height="60px"
                        android:layout_marginRight="60px"
                        android:src="@drawable/ic_action_forward" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_reedit_pw"
                    android:layout_width="match_parent"
                    android:layout_height="150px"
                    android:layout_marginTop="5px"
                    android:background="@color/colorPrimary"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="90px"
                        android:layout_height="90px"
                        android:layout_marginLeft="50px"
                        android:src="@drawable/usercenter4" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="修改密码"
                        android:textColor="@color/text_primary"
                        android:textSize="50px" />

                    <ImageView
                        android:layout_width="60px"
                        android:layout_height="60px"
                        android:layout_marginRight="60px"
                        android:src="@drawable/ic_action_forward" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_logout"
                    android:layout_width="match_parent"
                    android:layout_height="150px"
                    android:layout_marginTop="5px"
                    android:background="@color/colorPrimary"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="90px"
                        android:layout_height="90px"
                        android:layout_marginLeft="50px"
                        android:src="@drawable/ic_action_logout"
                        android:tint="@color/colorAccent"
                        android:tintMode="multiply" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="退出登录"
                        android:textColor="@color/text_primary"
                        android:textSize="50px" />

                    <ImageView
                        android:layout_width="60px"
                        android:layout_height="60px"
                        android:layout_marginRight="60px"
                        android:src="@drawable/ic_action_forward" />
                </LinearLayout>
            </com.zhy.autolayout.AutoLinearLayout>
        </ScrollView>
    </android.support.v4.widget.SwipeRefreshLayout>


    <FrameLayout
        android:id="@+id/fl_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent_black_CC"
        tools:visibility="gone">

        <Button
            android:id="@+id/btn_submit_login"
            android:layout_width="match_parent"
            android:layout_height="@dimen/normal_h"
            android:layout_gravity="center"
            android:layout_margin="100px"
            android:background="@drawable/bg_frame_accent"
            android:text="立 即 登 陆"
            android:textColor="@color/white" />
    </FrameLayout>
</com.zhy.autolayout.AutoFrameLayout>

