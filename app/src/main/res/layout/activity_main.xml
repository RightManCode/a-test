<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tl="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:orientation="vertical"    tools:context="com.wishland.www.wanhaohuimaterialdesign.ui.activity.MainActivity">    <FrameLayout        android:layout_width="match_parent"        android:layout_height="?attr/actionBarSize"        android:background="@color/colorPrimary"        android:elevation="@dimen/elevation3"        android:visibility="visible">        <TextView            android:id="@+id/tv_title"            style="@style/Text.Toolbar.Title"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_gravity="center"            android:text="首页" />        <ImageView            android:id="@+id/btn_custom_service"            android:layout_width="75px"            android:layout_height="75px"            android:layout_gravity="center_vertical|end"            android:layout_marginRight="30px"            android:src="@drawable/custom_service"            android:tint="@color/colorAccent" />    </FrameLayout>    <com.wishland.www.wanhaohuimaterialdesign.ui.customeView.ProhibitScrollViewPager        android:id="@+id/vp_main"        android:layout_width="match_parent"        android:layout_height="0dp"        android:layout_weight="1" />    <com.flyco.tablayout.CommonTabLayout        android:id="@+id/tl_main"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:background="@color/colorPrimary"        android:elevation="@dimen/elevation2"        android:paddingBottom="15px"        android:paddingTop="15px"        tl:tl_iconHeight="20dp"        tl:tl_iconWidth="20dp"        tl:tl_textSelectColor="@color/colorAccent"        tl:tl_textUnselectColor="@color/text_hint"        tl:tl_textsize="10dp"        tl:tl_indicator_height="0dp"        /></LinearLayout>